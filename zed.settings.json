{
  // theme
  "theme": "Ros√© Pine Moon",
  // keymap
  "base_keymap": "VSCode",
  // font
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  // telemetry
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  // terminal
  "terminal": {
    "font_size": 14,
    "dock": "left",
    "copy_on_select": true,
    "font_family": "JetBrains Mono"
  },
  // fs panel
  "project_panel": {
    "dock": "right",
    "default_width": 120
  },
  // coding format
  "format_on_save": "on",
  "preferred_line_length": 120,
  "ensure_final_newline_on_save": true,
  // prettier
  "language_overrides": {
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    }
  },
  // copilot
  "show_copilot_suggestions": true,
  // whitespaces
  "show_whitespaces": "none"
}
