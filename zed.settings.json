{
  // theme
  "theme": "Serendipity Sunset",
  // keymap
  "base_keymap": "VSCode",
  // toolbar
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  // tab bar
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  // gutter
  "gutter": {
    "line_numbers": true,
    "code_actions": false
  },
  // ui
  "ui_font_size": 16,
  "ui_font_family": "Berkeley Mono Trial",
  // buffer
  "buffer_font_size": 16,
  "buffer_font_family": "Berkeley Mono Trial",
  "buffer_font_features": {
    "liga": true
  },
  // telemetry
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  // terminal
  "terminal": {
    "font_size": 16,
    "dock": "left",
    "default_width": 20,
    "copy_on_select": true,
    "line_height": "standard",
    "font_family": "Berkeley Mono Trial"
  },
  // fs panel
  "project_panel": {
    "dock": "right",
    "default_width": 120,
    "indent_size": 8
  },
  // coding format
  "format_on_save": "on",
  "preferred_line_length": 120,
  "ensure_final_newline_on_save": true,
  // copilot
  "show_copilot_suggestions": true,
  // whitespaces
  "show_whitespaces": "none"
}
