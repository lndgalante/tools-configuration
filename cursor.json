{
  // Editor - Primary Fonts
  "editor.fontSize": 16,
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.fontFamily": "TX-02",
  // Editor - Secondary Fonts
  "scm.inputFontFamily": "TX-02",
  "chat.editor.fontFamily": "TX-02",
  "debug.console.fontFamily": "TX-02",
  "editor.codeLensFontFamily": "TX-02",
  "notebook.output.fontFamily": "TX-02",
  "markdown.preview.fontFamily": "TX-02",
  "editor.inlayHints.fontFamily": "TX-02",
  "terminal.integrated.fontFamily": "TX-02",
  "editor.inlineSuggest.fontFamily": "TX-02",
  "editor.experimentalInlineEdit.fontFamily": "TX-02",
  // APC
  "apc.font.family": "TX-02",
  // Editor - Cursor
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSmoothCaretAnimation": "on",
  // Editor - Sticky Scroll
  "editor.stickyScroll.enabled": true,
  // Editor - General
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.glyphMargin": false,
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.detectIndentation": false,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.accessibilitySupport": "off",
  "editor.hideCursorInOverviewRuler": true,
  // Workbench
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.iconTheme": "quill-icons-minimal",
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.settings.editor": "json",
  // Workbench - Tree
  "workbench.tree.indent": 14,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#dec58c" // reemplazar por amarilo de theme
  },
  // Imports
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,
  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "${activeEditorLanguage}",
  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  // Emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "never",
  "emmet.includeLanguages": { "typescript": "javascriptreact" },
  // Turbo Console log
  "turboConsoleLog.quote": "'",
  "turboConsoleLog.logMessagePrefix": "\\n",
  "turboConsoleLog.includeFileNameAndLineNum": false,
  // Biome
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": { "quickfix.biome": "explicit"},
  "[javascript][javascriptreact][typescript][typescriptreact][json][html][css][tailwindcss]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.02)",
    "rgba(127,255,127,0.02)",
    "rgba(255,127,255,0.02)",
    "rgba(79,236,236,0.02)"
  ],
  // Cursor
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.chat.smoothStreaming": true,
}
