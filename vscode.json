{
  // Window
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",

  // Explorer
  "explorer.sortOrder": "type",
  "explorer.openEditors.visible": 0,
  "explorer.decorations.colors": false,
  "explorer.confirmDragAndDrop": false,

  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.04)",
    "rgba(127,255,127,0.04)",
    "rgba(255,127,255,0.04)",
    "rgba(79,236,236,0.04)"
  ],

  // Tabnine
  // "tabnine.disable_file_regex": [ "[.]tsx$"],

  // Rust
  "rust-client.rustupPath": "/Users/leo/.cargo/bin/rustup",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust",
    "editor.formatOnSave": true
  },

  // Editor - General
  "editor.tabSize": 2,
  "editor.rulers": [80, 120],
  "editor.glyphMargin": false,
  "editor.smoothScrolling": true,
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "editor.renderWhitespace": "none",
  "editor.accessibilitySupport": "off",
  "editor.hideCursorInOverviewRuler": true,

  // Editor - Formatting
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": false
  },

  // Editor - Fonts
  "editor.fontSize": 18,
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",

  // Editor - Cursor
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": true,

  // Editor - Suggestions
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": false,
  "editor.parameterHints.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.insertMode": "insert",
  "editor.suggestSelection": "first",

  // ESlint
  "eslint.format.enable": false,
  "eslint.packageManager": "yarn",
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // Prettier
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "prettier.jsxSingleQuote": true,

  // Workbench - General
  "workbench.startupEditor": "none",
  "workbench.sideBar.location": "right",
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.panel.defaultLocation": "right",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.iconTheme": "eq-material-theme-icons",

  // Zen Mode
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Telemetry
  "telemetry.telemetryLevel": "off",

  // Imports
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,

  // Touchbar
  "keyboard.touchbar.enabled": false,

  // Source Control Management
  "scm.defaultViewMode": "tree",

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "${activeEditorLanguage}",

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,

  //  NPM
  "npm.packageManager": "yarn",

  // Terminal Customization
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",

  // Turbo Console log
  "turboConsoleLog.quote": "'",
  "turboConsoleLog.logMessagePrefix": "\\n",
  "turboConsoleLog.includeFileNameAndLineNum": false,

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "never",

  // JavaScript / TypeScript / JSON
  "js/ts.implicitProjectConfig.checkJs": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.colorTheme": "Aura Soft Dark",
  "tabnine.experimentalAutoImports": true,

  // Deno
  /* "deno.enable": true,
  "deno.path": "/opt/homebrew/Cellar/deno/1.9.2/bin/deno", */

  // Recording
  "cSpell.enabled": false
  /*  "editor.rulers": [],
    "git.enabled": false,
    "editor.fontSize": 20,
    "editor.fontLigatures": false,
    "editor.quickSuggestions": false,
    "editor.quickSuggestionsDelay": 1000000,
    "editor.parameterHints.enabled": false,
    "gitlens.mode.active": "zen",
    "editor.lightbulb.enabled": false,
    "workbench.statusBar.visible": true,
    "js/ts.implicitProjectConfig.checkJs": false */
}
