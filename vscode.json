{
  // Editor - Fonts
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.fontFamily": "JetBrains Mono",
  // Editor - Cursor
  "editor.cursorBlinking": "phase",
  "editor.stickyScroll.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.cursorSmoothCaretAnimation": "on",
  // Editor - General
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.rulers": [
    80,
    120
  ],
  "editor.glyphMargin": false,
  "editor.linkedEditing": true,
  "editor.smoothScrolling": true,
  "editor.detectIndentation": false,
  "editor.minimap.enabled": false,
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.accessibilitySupport": "off",
  "editor.hideCursorInOverviewRuler": true,
  // Editor - Suggestions
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "off",
  "editor.parameterHints.enabled": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.insertMode": "insert",
  "editor.suggestSelection": "first",
  // APC
  "apc.font.family": "JetBrains Mono",
  "apc.listRow": {
    "height": 24,
    "fontSize": 12
  },

  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
        "x": 9,
        "y": 9
    }
  }, "apc.activityBar": {
    "position": "top",
    "size": 36
  },
  // Window
  "window.titleBarStyle": "native",
  "workbench.sideBar.location": "right",
  // Breadcrumbs
  "breadcrumbs.enabled": false,
  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.04)",
    "rgba(127,255,127,0.04)",
    "rgba(255,127,255,0.04)",
    "rgba(79,236,236,0.04)"
  ],
  // Workbench - General
  "workbench.iconTheme": "quill-icons",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.colorTheme": "Serendipity Midnight",
  "workbench.startupEditor": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.panel.defaultLocation": "right",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // Workbench - Tree
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.colorCustomizations": {
    "tree.indentGuidesStroke": "#dec58c"
  },
  // Zen Mode
  "zenMode.centerLayout": false,
  "zenMode.hideLineNumbers": false,
  // Telemetry
  "telemetry.telemetryLevel": "off",
  // Imports
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.disableAutomaticTypeAcquisition": true,
  // Touchbar
  "keyboard.touchbar.enabled": false,
  // Source Control Management
  "scm.defaultViewMode": "tree",
  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "${activeEditorLanguage}",
  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  //  NPM
  "npm.packageManager": "yarn",
  // Terminal Customization
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  // Turbo Console log
  "turboConsoleLog.quote": "'",
  "turboConsoleLog.logMessagePrefix": "\\n",
  "turboConsoleLog.includeFileNameAndLineNum": false,
  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "never",
  // JavaScript / TypeScript / JSON
  "js/ts.implicitProjectConfig.checkJs": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // cSpell
  "cSpell.enabled": false,
  // Console Ninja
  "console-ninja.featureSet": "Community"
}
